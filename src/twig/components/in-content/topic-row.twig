<div class="topic_block">
	<div class="topic_items">
		{% for item in items %}
		<article class="topic_item">
			<div class="topic_item_inner">
				{% if item.image %}
				<figure class="topic_figure">
					{% if item.link %}
					<a class="topic_figure_link" href="#">
					{% endif %}
						{{site.image("topic", img.classic.xsml, item.image)}}
					{% if item.link %}
					</a>
					{% endif %}
				</figure>
				{% endif %}
				<div class="topic_wrapper">
					<header class="topic_header">
						<h3 class="topic_title">
							{% if item.link %}
							<a class="topic_title_link" href="#">
							{% endif %}
								{{item.title}}
							{% if item.link %}
							</a>
							{% endif %}
						</h3>
					</header>
					<div class="topic_body">
						<div class="topic_caption">
							<p>{{item.caption}}</p>
						</div>
					</div>
					{% if item.link %}
					<footer class="topic_footer">
						{{site.button("topic", item.link.name, item.link.href, "arrow_right")}}
					</footer>
					{% endif %}
				</div>
			</div>
		</article>
		{% endfor %}
	</div>
</div>
